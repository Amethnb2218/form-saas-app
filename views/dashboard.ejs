<div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
  <div>
    <h2 class="text-white fw-bold mb-1">Dashboard</h2>
    <div class="text-white-60">Gère tes formulaires et consulte les soumissions.</div>
  </div>
  <div class="d-flex gap-2">
    <a href="/form/new" class="btn btn-primary rounded-pill px-4">
      <i class="bi bi-plus-circle"></i> Nouveau formulaire
    </a>
    <a href="/logout" class="btn btn-outline-light rounded-pill px-4">
      <i class="bi bi-box-arrow-right"></i> Déconnexion
    </a>
  </div>
</div>

<div class="card-glass p-3 p-lg-4 text-white shadow-lg table-glass">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h5 class="fw-bold mb-0"><i class="bi bi-ui-checks-grid"></i> Mes formulaires</h5>
    <span class="badge rounded-pill text-bg-light"><%= (forms && forms.length) ? forms.length : 0 %></span>
  </div>

  <div class="table-responsive">
    <table class="table align-middle">
      <thead>
        <tr>
          <th>Titre</th>
          <th>Champs</th>
          <th>Fichier ?</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (forms && forms.length) { %>
          <% forms.forEach(form => { %>
            <tr>
              <td class="fw-semibold"><%= form.title %></td>
              <td><%= form.fields ? form.fields.length : 0 %></td>
              <td><%= form.allowFileUpload ? 'Oui' : 'Non' %></td>
              <td class="text-end">
                <div class="btn-group">
                  <a class="btn btn-sm btn-outline-light" href="/form/edit/<%= form._id %>"><i class="bi bi-pencil"></i></a>
                  <a class="btn btn-sm btn-outline-light" href="/form/submissions/<%= form._id %>"><i class="bi bi-inbox"></i></a>
                  <a class="btn btn-sm btn-outline-light" target="_blank" href="/form/<%= form._id %>"><i class="bi bi-box-arrow-up-right"></i></a>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4" class="text-white-60">Aucun formulaire. Crée ton premier formulaire.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
