<div class="row justify-content-center">
  <div class="col-lg-9 col-xl-8">
    <div class="card-glass p-4 p-lg-5 text-white shadow-lg">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <h2 class="fw-bold mb-1">Modifier le formulaire</h2>
          <div class="text-white-60"><%= form.title %></div>
        </div>
        <a href="/dashboard" class="btn btn-outline-light rounded-pill"><i class="bi bi-arrow-left"></i> Retour</a>
      </div>

      <form class="input-glow" method="POST" action="/form/edit/<%= form._id %>">
        <div class="mb-3">
          <label class="form-label">Titre</label>
          <input class="form-control form-control-lg" name="title" value="<%= form.title %>" required />
        </div>

        <div class="mb-3">
          <label class="form-label">Autoriser l'upload de fichier ?</label>
          <select class="form-control form-control-lg" name="allowFileUpload">
            <option value="false" <%= !form.allowFileUpload ? 'selected' : '' %>>Non</option>
            <option value="true" <%= form.allowFileUpload ? 'selected' : '' %>>Oui</option>
          </select>
        </div>

        <div class="mb-3">
          <label class="form-label">Champs (JSON)</label>
          <textarea class="form-control bg-glass" rows="10" name="fieldsJson"><%= JSON.stringify(form.fields || [], null, 2) %></textarea>
        </div>

        <button class="btn btn-primary btn-lg rounded-pill px-4">
          <i class="bi bi-save2"></i> Enregistrer
        </button>
      </form>
    </div>
  </div>
</div>
