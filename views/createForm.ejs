<div class="row justify-content-center">
  <div class="col-lg-9 col-xl-8">
    <div class="card-glass p-4 p-lg-5 text-white shadow-lg">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <h2 class="fw-bold mb-1">Nouveau formulaire</h2>
          <div class="text-white-60">Configure le formulaire pour ton entreprise.</div>
        </div>
        <a href="/dashboard" class="btn btn-outline-light rounded-pill"><i class="bi bi-arrow-left"></i> Retour</a>
      </div>

      <form class="input-glow" method="POST" action="/form/new">
        <div class="mb-3">
          <label class="form-label">Titre</label>
          <input class="form-control form-control-lg" name="title" placeholder="Ex: Demande de stage" required />
        </div>

        <div class="mb-3">
          <label class="form-label">Autoriser l'upload de fichier ?</label>
          <select class="form-control form-control-lg" name="allowFileUpload">
            <option value="false">Non</option>
            <option value="true">Oui</option>
          </select>
        </div>

        <div class="mb-3">
          <label class="form-label">Champs (JSON)</label>
          <textarea class="form-control bg-glass" rows="8" name="fieldsJson" placeholder='[{"label":"Nom","type":"text","required":true}]'></textarea>
          <div class="form-text text-white-60">Astuce: garde un format JSON valide.</div>
        </div>

        <button class="btn btn-primary btn-lg rounded-pill px-4">
          <i class="bi bi-check2-circle"></i> Cr√©er
        </button>
      </form>
    </div>
  </div>
</div>
