<% /* Layout is set globally in app.js via express-ejs-layouts. */ %>
<div class="row justify-content-center">
  <div class="col-md-8">
    <% if (form.company.logoPath) { %>
      <div class="text-center mb-3">
        <img src="<%= form.company.logoPath %>" alt="Logo" style="max-height:100px;" />
      </div>
    <% } %>
    <h2><%= form.title %></h2>
    <form action="/form/<%= form._id %>" method="POST" enctype="multipart/form-data" class="mt-3">
      <% form.fields.forEach(function(field) { %>
        <div class="mb-3">
          <label class="form-label"><%= field.name %></label>
          <input type="<%= field.type %>" class="form-control" name="<%= field.name %>" required />
        </div>
      <% }); %>
      <% if (form.allowFile) { %>
        <div class="mb-3">
          <label class="form-label">Pi√®ce jointe</label>
          <input type="file" class="form-control" name="attachment" accept="image/*,application/pdf" />
        </div>
      <% } %>
      <button type="submit" class="btn btn-primary">Envoyer</button>
    </form>
  </div>
</div>