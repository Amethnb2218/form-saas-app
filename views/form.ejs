<div class="row justify-content-center">
  <div class="col-lg-9 col-xl-8">
    <div class="card-glass p-4 p-lg-5 text-white shadow-lg">
      <h2 class="fw-bold mb-1"><%= form.title %></h2>
      <p class="text-white-60 mb-4">Merci de remplir ce formulaire.</p>

      <form class="input-glow" method="POST" action="/form/<%= form._id %>" enctype="multipart/form-data">
        <% (form.fields || []).forEach(field => { %>
          <div class="mb-3">
            <label class="form-label"><%= field.label %></label>

            <% if (field.type === 'textarea') { %>
              <textarea class="form-control form-control-lg" name="<%= field.name %>" <%= field.required ? 'required' : '' %>></textarea>
            <% } else { %>
              <input class="form-control form-control-lg" type="<%= field.type || 'text' %>" name="<%= field.name %>" <%= field.required ? 'required' : '' %> />
            <% } %>

          </div>
        <% }) %>

        <% if (form.allowFileUpload) { %>
          <div class="mb-3">
            <label class="form-label">Fichier</label>
            <input class="form-control form-control-lg" type="file" name="file" />
          </div>
        <% } %>

        <button class="btn btn-primary btn-lg rounded-pill px-4">
          <i class="bi bi-send"></i> Envoyer
        </button>
      </form>
    </div>
  </div>
</div>
