<section class="row g-4 align-items-center">
  <div class="col-lg-7">
    <div class="card-glass p-4 p-lg-5 text-white shadow-lg">
      <div class="d-inline-flex align-items-center gap-2 px-3 py-2 rounded-pill mb-3"
           style="background: rgba(255,255,255,.06); border: 1px solid rgba(255,255,255,.12);">
        <i class="bi bi-stars"></i>
        <span class="small text-white-80">Plateforme SaaS • Formulaires intelligents</span>
      </div>

      <h1 class="display-5 fw-bold hero-title mb-3">
        Crée, partage et analyse tes formulaires
        <span style="background: linear-gradient(135deg,#6366f1,#22c55e); -webkit-background-clip:text; color:transparent;">
          comme un pro.
        </span>
      </h1>

      <p class="lead text-white-60 mb-4">
        Multi-entreprises, formulaires dynamiques, soumissions centralisées — et un look premium.
      </p>

      <div class="d-flex flex-wrap gap-2">
        <a class="btn btn-primary rounded-pill px-4" href="/register"><i class="bi bi-rocket-takeoff"></i> Commencer</a>
        <a class="btn btn-outline-light rounded-pill px-4" href="/login"><i class="bi bi-box-arrow-in-right"></i> Se connecter</a>
      </div>

      <div class="row g-3 mt-4">
        <div class="col-6 col-lg-4"><div class="kpi text-white">
          <div class="fw-bold">Multi-entreprises</div>
          <div class="small text-white-60">Gestion par organisation</div>
        </div></div>
        <div class="col-6 col-lg-4"><div class="kpi text-white">
          <div class="fw-bold">Sécurisé</div>
          <div class="small text-white-60">Auth + MongoDB</div>
        </div></div>
        <div class="col-12 col-lg-4"><div class="kpi text-white">
          <div class="fw-bold">Responsive</div>
          <div class="small text-white-60">Mobile & desktop</div>
        </div></div>
      </div>
    </div>
  </div>

  <div class="col-lg-5">
    <div class="card-glass p-4 text-white shadow-lg">
      <h5 class="fw-bold mb-3"><i class="bi bi-building"></i> Entreprises inscrites</h5>

      <% if (companies && companies.length) { %>
        <div class="list-group list-group-flush">
          <% companies.forEach(c => { %>
            <div class="list-group-item bg-transparent text-white border-secondary-subtle">
              <div class="d-flex justify-content-between align-items-center">
                <span class="fw-semibold"><%= c.companyName || c.name || 'Entreprise' %></span>
                <span class="badge rounded-pill text-bg-light">SaaS</span>
              </div>
              <div class="small text-white-60">Connecte-toi pour voir les formulaires</div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="text-white-60">Aucune entreprise pour le moment.</div>
      <% } %>
    </div>
  </div>
</section>
